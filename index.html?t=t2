<script>
//tableNoをlsに書き込み
var param=location.search.slice(-1);
localStorage.setItem("table",param);
document.getElementById("btn").onclick = function()
{
location.href='./index_page2.html'
};

var flgg1=0;

var socket = io.connect();
setInterval(function()
{
socket.emit("client_to_server", "poling");
socket.on("server_to_client", function(data)
  {
    console.log("rxdata:" + data)
  //data:トリガ信号,flgg:再生ステータス1がstp
    if(data == "1" && flgg1 ==0)
    {
    location.href="./index3.html"
    //document.getElementById("ifm1").src="./index3.html"
    flgg1=1;
    socket.disconnect();
    //socket.close();
    }
  });

},10000);
</script>
